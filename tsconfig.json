{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019", "esnext.bigint"],
    "allowJs": true,
    "checkJs": true,
    "outDir": "./build",
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {},
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
